<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="datn.hk.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Activity.DoorActivity" />
        <activity android:name=".Activity.KitchenActivity" />
        <activity android:name=".Activity.Bedroom2Activity" />
        <activity android:name=".Activity.Bedroom1Activity" />
        <activity android:name=".Activity.GarageActivity" />
        <activity android:name=".Activity.LinvingRoomActivity" />
        <activity android:name=".Activity.LoginActivity"/>
        <activity
            android:name=".Activity.HomeControl"
            android:label="@string/title_activity_home_control" />
        <activity
            android:name=".Activity.Signup"/>
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>